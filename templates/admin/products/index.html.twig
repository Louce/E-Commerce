{% extends "base.html.twig" %}

{% block title %}Liste des catégories
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			{% include "_includes/_adminnav.html.twig" %}
			<main class="col-9 border border-light bg-white p-2">
				<h1 class="mb-3">Liste des produits</h1>

				<table class="table">
					<thead>
						<tr>
							<th>ID</th>
							<th>Nom</th>
							<th>Price</th>
							<th>Stock</th>
							<th>Catégorie</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
					{% for product in products %}
						<tr>
							<td>{{ product.id }}</td>
							{# <td><img src="{{ asset('assets/uploads/products/mini/300x300-' ~ product.images[0].name) }}" alt="{{ product.name }}"></td> #}
							<td>{{ product.name }}</td>
							<td>{{ product.price / 100 }}</td>
							<td>{{ product.stock }}</td>
							<td>{{ product.categories.name }}</td>
							<td>
								<a href="{{ path('admin_products_edit', {id: product.id})}}" class="btn btn-success">Modifier</a>
								<a href="{{ path('admin_products_delete', {id: product.id})}}" class="btn btn-warning">Supprimer</a>
							</td>
						</tr>
					{% endfor %}
					</tbody>
				</table>
			</main>
		</div>
	</div>

{% endblock %}
