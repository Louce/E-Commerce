{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<main class="container">
		<secion class="row">
			<div class="col-12">
				<h1>Site e-commerceâœ…</h1>
				<p>Bienvenue dans notre boutique</p>
			</div>

			{% for category in categories %}
				{% if category.parent == null %}
					<div class="col-12 mt-5">
						<h2>{{ category.name }}</h2>
					</div>
				{% else %}
					<div class="col-4">
						<div class="card h-100 w-100" style="width: 18rem;">
							<div class="card-body">
								<h3 class="card-title text-center">{{ category.name }}</h5>
								<a href="{{ path('categories_list', {slug: category.slug}) }}" class="btn btn-primary mt-4 d-block w-50 m-auto">Voir les produits</a>
							</div>
						</div>
					</div>
				{% endif %}
			{% endfor %}
		</secion>
	</main>
{% endblock %}
